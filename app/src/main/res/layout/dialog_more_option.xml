<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:id="@+id/cv_data"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="@dimen/dp10"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/dp15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp20"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_add_to_contact"
                android:layout_width="match_parent"
                android:text="Add to contacts"
                android:visibility="gone"
                android:textStyle="normal"
                android:fontFamily="@font/urfa_regular"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp16"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/txt_add_to_exist_contact"
                android:layout_width="match_parent"
                android:text="Add to existing contact"
                android:textStyle="normal"
                android:visibility="gone"
                android:fontFamily="@font/urfa_regular"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/dp20"
                android:textSize="@dimen/sp16"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/txt_message"
                android:layout_width="match_parent"
                android:text="Message"
                android:textStyle="normal"
                android:fontFamily="@font/urfa_regular"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/dp20"
                android:textSize="@dimen/sp16"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/txt_voice_call"
                android:layout_width="match_parent"
                android:text="Vice call"
                android:textStyle="normal"
            android:fontFamily="@font/urfa_regular"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/dp20"
                android:textSize="@dimen/sp16"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/txt_video_call"
                android:layout_width="match_parent"
                android:text="Video call"
                android:textStyle="normal"
               android:fontFamily="@font/urfa_regular"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/dp20"
                android:textSize="@dimen/sp16"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

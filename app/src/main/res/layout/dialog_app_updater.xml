<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:paddingLeft="@dimen/dp50"
    android:paddingRight="@dimen/dp50"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp200"
            android:translationY="20dp"
            android:background="@drawable/popup"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20"
                android:fontFamily="@font/urfa_regular"
                android:gravity="center"
                android:text="New Update!"
                android:textColor="@color/colorWhite"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/ll_bg"
                android:layout_width="120dp"
                android:layout_height="@dimen/dp50"
                android:layout_below="@id/tv_title"
                android:visibility="visible"
                android:background="@drawable/envalp"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp30"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_height="@dimen/dp30"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <TextView

                android:id="@+id/tv_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_bg"
                android:layout_marginTop="@dimen/dp20"
                android:fontFamily="@font/urfa_regular"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp50"
                android:text="New Update!"
                android:textColor="@color/colorWhite"
                android:textSize="14dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_download"

            android:background="@drawable/ll_bottom_round_corner_gry"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_message_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp50"
                android:fontFamily="@font/urfa_regular"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/dp30"
                android:text="New cleaner look for your Ozochat app!"
                android:textColor="@color/colorBlack"
                android:textSize="14dp" />

            <TextView

                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_message_data"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp10"
                android:fontFamily="@font/urfa_regular"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/dp30"
                android:text="More features coming soon!"
                android:textColor="@color/colorBlack"
                android:textSize="14dp" />

            <TextView

                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_1"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp10"
                android:fontFamily="@font/urfa_regular"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/dp30"
                android:text="Bug fixes and improvement!"
                android:textColor="@color/colorBlack"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_below="@+id/tv2"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_later"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/urfa_regular"
                    android:gravity="center"
                    android:padding="@dimen/dp10"
                    android:text="NOT NOW"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view_seperate"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@color/colorGrey"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_update"
                    android:layout_width="@dimen/dp200"
                    android:layout_height="wrap_content"
                    android:background="#8b22f0"
                    android:fontFamily="@font/urfa_regular"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="UPDATE NOW!"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="@dimen/dp50"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/lable">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urfa_regular"
            android:gravity="center"
            android:text="What's new in Ozochat"
            android:textColor="@color/colorWhite"
            android:textSize="14dp" />

    </LinearLayout>
</RelativeLayout>
